#:import math math
<PostView@BoxLayout>:
    orientation: 'vertical'
    size: root.width,root.height

    BoxLayout:
        padding: [100,0,100,100]
        ProfileViewWidget:
            id: pv
            size_hint: 0.6,0.9
            canvas.before:
                PushMatrix
                Rotate:
                    angle: root.rotate
                    origin: root.width/2,0
            canvas.after:
                PopMatrix
            size: self.width,self.height
            on_touch_move:
