#:include View/profile_view_widget.kv
#:include View/menubar.kv

#Our main swiping screen

<PostView@AnchorLayout>:

    orientation: 'vertical'
    size: root.width,root.height
    pv_front: pv_front
    pv_back: pv_back

    canvas.before:
        Color:
            rgb: (249/256,249/256,249/256)
        Rectangle:
            pos: self.pos
            size: self.size

    MenuBar:
        size_hint: 1,1

        AnchorLayout:
            #padding: [100,0,100,100]

            ProfileViewWidget:
                id: pv_back

            ProfileViewWidget:
                id: pv_front
                canvas.before:
                    PushMatrix
                    Translate:
                        y: root.y_translate
                    Rotate:
                        angle: root.rotate
                        origin: root.width/2,0
                canvas.after:
                    PopMatrix