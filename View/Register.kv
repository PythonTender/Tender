<Register>:

    username: username
    password: password
    firstName: firstName
    lastName: lastName
    location: location
    cols: 1

    size: root.width, root.height
    padding: 200,200,200,200

    Label:
        text: "Tender"
        color: 1,0,0,0.8
        font_size: '30sp'
        margin: 0,0,50,50
        bold: True

    TextInput:
        id: firstName
        hint_text: "First Name"
        multiline: False

    TextInput:
        id: lastName
        hint_text: "Last Name"
        multiline: False

    TextInput:
        id: location
        hint_text: "Location"
        multiline: False

    TextInput:
        id: username
        hint_text: "Username"
        multiline: False

    TextInput:
        id: password
        hint_text: "Password"
        multiline: False
        password: True

    Button:
        text: "Register"
        on_release:
            self.register()
            app.root.current = "login_screen" if self.register() else "register_screen"
            app.root.transition.direction = "right"

    Button:
        text: "Go back"
        on_release:
            app.root.current = "login_screen"
            app.root.transition.direction = "left"


