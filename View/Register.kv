#:include View/themes/Buttons/roundedbutton.kv
<Register>:

    username: username
    password: password
    firstName: firstName
    lastName: lastName
    location: location
    cols: 1
    rows: 8
    spacing: 5

    canvas.before:
        Color:
            rgba: (254/255,60/255,114/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    size: root.width, root.height
    padding: 75,100,75,100
    spacing: 2

    Label:
        text: "Tender"
        color: 0.95,0.95,0.95,1
        font_size: '30sp'
        bold: True
        font_name: 'Gotham Rounded'

    TextInput:
        id: username
        hint_text: "Username"
        multiline: False
        write_tab: False

    TextInput:
        id: password
        hint_text: "Password"
        multiline: False
        password: True
        write_tab: False

    TextInput:
        id: firstName
        hint_text: "First Name"
        multiline: False
        write_tab: False

    TextInput:
        id: lastName
        hint_text: "Last Name"
        multiline: False
        write_tab: False

    TextInput:
        id: location
        hint_text: "Location"
        multiline: False
        write_tab: False

    RoundedButton:
        text: "[color=FAA1AF]" + "Register" + "[/color]"
        markup: True
        on_release:

            app.root.current = "login_screen" if root.register() else "register_screen"
            app.root.transition.direction = "right"

            firstName.text = ""
            lastName.text = ""
            location.text = ""
            username.text = ""
            password.text = ""

    RoundedButton:
        text: "[color=FAA1AF]" + "Go back" + "[/color]"
        markup: True
        on_release:

            app.root.current = "login_screen"
            app.root.transition.direction = "left"

            firstName.text = ""
            lastName.text = ""
            location.text = ""
            username.text = ""
            password.text = ""


