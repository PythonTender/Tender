<Register>:

    username: username
    password: password
    firstName: firstName
    lastName: lastName
    location: location
    cols: 1

    size: root.width, root.height
    padding: 75,100,75,100
    spacing: 2

    Label:
        text: "Tender"
        color: 1,0,0,0.8
        font_size: '30sp'
        margin: 0,0,50,50
        bold: True

    TextInput:
        id: username
        hint_text: "Username"
        multiline: False
        write_tab: False

    TextInput:
        id: password
        hint_text: "Password"
        multiline: False
        password: True
        write_tab: False

    TextInput:
        id: firstName
        hint_text: "First Name"
        multiline: False
        write_tab: False

    TextInput:
        id: lastName
        hint_text: "Last Name"
        multiline: False
        write_tab: False

    TextInput:
        id: location
        hint_text: "Location"
        multiline: False
        write_tab: False

    Button:
        text: "Register"
        on_release:

            app.root.current = "login_screen" if root.register() else "register_screen"
            app.root.transition.direction = "right"

            firstName.text = ""
            lastName.text = ""
            location.text = ""
            username.text = ""
            password.text = ""

    Button:
        text: "Go back"
        on_release:

            app.root.current = "login_screen"
            app.root.transition.direction = "left"

            firstName.text = ""
            lastName.text = ""
            location.text = ""
            username.text = ""
            password.text = ""


