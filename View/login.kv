#:include View/themes/Buttons/roundedbutton.kv


#Our login kv, pretty straight forward, has themes, fonts, etc
#Supports swiping to other screens
<Login>:
    username: username
    password: password
    cols: 1
    rows: 5
    spacing: 5
    canvas.before:
        Color:
            rgba: (254/255,60/255,114/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    size: root.width, root.height
    padding: 75,100,75,100

    Label:
        text: "Tender"
        color: 0.95,0.95,0.95,1
        font_size: '30sp'
        bold: True
        font_name: 'Gotham Rounded'

    TextInput:
        id: username
        hint_text: "Username"
        multiline: False
        write_tab: False

    TextInput:
        id: password
        hint_text: "Password"
        multiline: False
        password: True
        write_tab: False


    RoundedButton:
        text: "[color=FAA1AF]" + "Login" + "[/color]"
        markup: True
        on_release:
            app.root.current = "postview_screen" if root.validateUser() else "login_screen"
            username.text = ""
            password.text = ""

    RoundedButton:
        text: "[color=FAA1AF]" + "Register" + "[/color]"
        markup: True
        on_release:
            app.root.current = "register_screen"
            app.root.transition.direction = "right"
            username.text = ""
            password.text = ""

