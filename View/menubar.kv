#Our navigation options after we log in

<MenuBar>:
    rows: 2
    spacing: 10
    BoxLayout:
        size_hint_y: None
        height: 30
        spacing: 10

        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Button:
            width: 30
            size_hint_x: None
            background_normal: 'resources/posts_icon.png'
            on_press:
                app.root.current = 'postview_screen'
                app.root.transition.direction = 'left'

        Button:
            width: 30
            size_hint_x: None
            background_normal: 'resources/wishlist_icon.png'
            on_press:
                app.root.current = 'wishlist_screen'
                app.root.transition.direction = 'right'
