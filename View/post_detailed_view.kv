<PostDetailedView@Popup>:

    image: image
    lb_model_year: lb_model_year
    lb_color_distance_price: lb_color_distance_price
    lb_description: lb_description
    on_touch_down: root.dismiss()

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        RelativeLayout:
            size_hint: 1,0.5
            ImageButton:
                size_hint: 0.8,1
                pos_hint: {'center_x':0.5, 'center_y': 0.5}
                id: image

        AnchorLayout:
            size_hint: 1,0.5
            pos_hint: {'x':0.1, 'y': 0}
            anchor_x: 'left'
            anchor_y: 'top'
            Label:
                color: (0,0,0)
                id: lb_model_year
                size: self.texture_size
                text_size: self.size
                size_hint: (1,0.1)
                font_name: 'Gotham Rounded'
                font_size: 24
                markup: True
            Label:
                color: (0,0,0)
                id: lb_color_distance_price
                size: self.texture_size
                text_size: self.size
                size_hint: (1,0.2)
                font_name: 'Gotham Rounded'
                font_size: 24
                markup: True
            Label:
                color: (0,0,0)
                id: lb_description
                size: self.texture_size
                text_size: self.size
                size_hint: (1,0.9)
                font_name: 'Gotham Rounded'
                font_size: 24
                markup: True