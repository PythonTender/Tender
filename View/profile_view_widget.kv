#:import ImageButton Controller.ImageButton

<ProfileViewWidget@BoxLayout>:

    image: image
    lb_model_year: lb_model_year
    orientation: 'vertical'
    spacing: 10
    canvas.before:
        Color:
            rgb: (249/256,249/256,249/256)
        Rectangle:
            pos: self.pos
            size: self.size

    RelativeLayout:
        size_hint: 1,0.5

        ImageButton:
            size_hint: 0.8,1
            pos_hint: {'center_x':0.5, 'center_y': 0.5}
            id: image
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Line:
                    width: 2
                    rectangle: root.center_x - (self.norm_image_size[0] / 2),self.center_y - (self.norm_image_size[1] / 2), self.norm_image_size[0], self.norm_image_size[1]
                Color:
                    rgba: 0,0,0,0.1
                Rectangle:
                    size: self.norm_image_size[0], self.norm_image_size[1]
                    pos: root.center_x - (self.norm_image_size[0] / 2),self.center_y - (self.norm_image_size[1] / 2)
            on_release: root.open_popup()

    AnchorLayout:
        size_hint: 1,0.5
        pos_hint: {'x':0.1, 'y': 0}
        anchor_x: 'left'
        anchor_y: 'top'
        Label:
            color: (0,0,0)
            id: lb_model_year
            size: self.texture_size
            text_size: self.size
            size_hint: (1,None)
            font_name: 'Gotham Rounded'
            font_size: 24
            markup: True