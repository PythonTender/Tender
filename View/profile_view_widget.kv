#:import ImageButton Controller.ImageButton

<ProfileViewWidget@BoxLayout>:

    image: image
    lb_model_year: lb_model_year
    orientation: 'vertical'
    canvas:
        Color:
            rgb: (249/256,249/256,249/256)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size_hint: 1,0.5
        ImageButton:
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 1
                Line:
                    width: 1
                    rectangle: self.x+30, self.y, self.width-60, self.height
                Color:
                    rgba: 0,0,0,0.1
                Rectangle:
                    size: self.size
                    pos: self.x+5,self.y-10
            pos_hint: {'y': 0, 'x': 0}
            id: image
            on_press: root.open_popup()

    AnchorLayout:
        size_hint: 1,0.5
        anchor_x: 'left'
        anchor_y: 'top'
        padding: [60,20,0,0]
        Label:
            color: (0,0,0)
            id: lb_model_year
            size: self.texture_size
            text_size: self.size
            size_hint: (1,None)
            font_name: 'Gotham Rounded'
            font_size: 24
            markup: True