<Login@Screen>:
    name: 'login_screen'

    username: username
    password: password

    GridLayout:
        cols: 1
        size: root.width, root.height
        padding: 200,200,200,200

        Label:
            text: "Tender"
            color: 1,0,0,0.8
            font_size: '30sp'
            margin: 0,0,50,50
            bold: True

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False

        TextInput:
            id: password
            hint_text: "Password"
            multiline: False
            password: True


        Button:

            text: "Login"
            # on_press: app.root.current = "postview_screen" if self.validateUser() else "login_screen"

        Button:

            text: "Register"
            on_press: app.root.current = "register_screen"